                                                    android:layout_height="50dp"
                                                    android:textStyle="bold"
                                                    android:textSize="16dp"
                                                    android:textColor="@color/text_color"
                                                    android:gravity="center"
                                                    android:text="@string/qualityReviewText"
                                                    />

