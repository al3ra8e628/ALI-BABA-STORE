                                                    android:textStyle="bold"
                                                    android:textColor="@color/text_color"
                                                    android:layout_width="match_parent"
                                                    android:gravity="center"
                                                    android:layout_height="50dp"

                                                    android:text="@string/reviewValueText"
                                                    />

